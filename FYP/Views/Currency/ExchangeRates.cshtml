@using FYP.Models;
@model List<CurrencyExchange>

    <div class="container py-sm-5">
            <header class="text-center text-black">
                <h1 class="display-4"><b>Exchange Rates</b></h1>
            </header>
            <div class="row py-5">
                <div class="col-sm-5 mx-auto">
                    <div class="card rounded shadow border-0">
                        <div class="card-body p-sm-6 bg-white rounded">
                            <div class="table-responsive">
                                <table class="table table-hover table-responsive" style="text-align:left">
                                    <thead>
                                        <tr>
                                            <th>Source Currency</th>
                                            <th>Target Currency</th>
                                            <th>Rate ($1)</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (CurrencyExchange item in Model)
                                        {
                                            <tr>
                                                <td>@item.Source_currency</td>
                                                <td>@item.Target_currency</td>
                                                <td>@item.Exchange_rate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
