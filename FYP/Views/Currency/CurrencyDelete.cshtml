<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Currency</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <form method="post" action="/Currency/CurrencyDeletePost">
            <div class="offset-sm-2 col-sm-10">
                <h3>Delete Currency</h3>
            </div>
            <div class="form-group row">
                <label for="currency_name" class="control-label col-sm-2">Currency name :</label>
                <div class="col-sm-4">
                    <input type="text" id="currency_name" name="currency_name" class="form-control" />
                </div>
                <div class="col-sm-1">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-5">
                        <div class="alert alert-@ViewData["MsgType"]">
                            @ViewData["Message"]
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>

</body>
</html>
