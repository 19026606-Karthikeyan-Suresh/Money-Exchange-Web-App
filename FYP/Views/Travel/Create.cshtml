@model Trip

<form method="post"
      asp-controller="Travel"
      asp-action ="Create"
      enctype="multipart/form-data"
      >

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <h2>Add Trip Highlight</h2>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Title">Title :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Title" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="City">City :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="City" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="TripDate">Trip Date :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="TripDate" class="form-control" placeholder="YYYY-MM-DD" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Duration">Length (in Days) :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Duration" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Spending">Total Cost :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Spending" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Story">Detailed Story :</label>
      <div class="col-sm-6">
         <textarea asp-for="Story" rows="8" cols="20" class="form-control"></textarea>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" asp-for="Photo">Photo :</label>
      <div class="col-sm-6">
         <input type="file" asp-for="Photo" class="form-control-file" />
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <input type="submit" value="Submit" class="btn btn-primary" />
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <div asp-validation-summary="All" class="text-danger"></div>
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
