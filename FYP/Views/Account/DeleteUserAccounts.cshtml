<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>Accounts - Delete Users</title>
</head>
<body>
    <div>&nbsp;</div>

    <div class="container">

        <form id="feedback" method="post" action="/Account/DeleteUserAccountsPost" >
        <div>
            <h2>Delete Users</h2>
        </div>
        <div class="form-group row">
            <label for="account_id" class="control-label col-sm-2">Account ID: </label>
            <div>
                <input type="text" id="account_id" name="AccountID" class="control-label"/>
            </div>
        </div>
        <div class="form-group row">
                <div class="offset-sm-2 col-sm-5">
                     <input type="submit" id="submit" value="Delete" class="btn btn-primary"/>
                </div>
        </div>

        @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-5">
                        <div class="alert alert-@ViewData["MsgType"]">
                            @ViewData["Message"]
                        </div>
                    </div>
                </div>
            }
    </form>
    </div>
</body>
</html>