@using MoneyExchangeWebApp.Models
@model Enquiry

<form asp-controller="Enquiry"
      asp-action="Enquire"
      method="post">
      
      <div class="border p-3 mt-4">
          <div class="row pb-2" >
              <br />
              <h2 style="text-align: center;">Have a Question? Feel free to enquire us about it!</h2>
              <br />
          </div>

    <div class="row g-2 mb-3">
     <div class="col-md">
       <div class="form-floating">
        <input type="text" class="form-control" placeholder="Email Address" asp-for="EmailAddress">
        <label asp-for="EmailAddress">Visitor Email</label>
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
      </div>
     </div>
     <div class="col-md">
       <div class="form-floating">
         <input type="text" class="form-control" placeholder="Subject" asp-for="Subject">
         <label asp-for="Subject">Subject</label>
         <span asp-validation-for="Subject" class="text-danger"></span>
       </div>
     </div>
    </div>

    <div class="form-floating row g-2 mb-3">
        <textarea class="form-control" id="floatingTextarea1" asp-for="Question" style="height: 100px"></textarea>
        <label for="floatingTextarea2">Question</label>
   </div>

       <div class="form-group row">
<div class="offset-sm-2 col-sm-6">
<div asp-validation-summary="All" class="text-danger"></div>
</div>
</div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
            @ViewData["sql"]
        </div>
    }
    </div>
</form>
@section Scripts{
  <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
      toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
  </script>
}
