@using MoneyExchangeWebApp.Models;
@model List<Enquiry>;

    <script>
        $(document).ready(function () {
            $('#Etable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
            var tableTools = new $.fn.dataTable.TableTools( table, {
        "buttons": [
            "copy",
            "csv",
            "xls",
            "pdf",
            { "type": "print", "buttonText": "Print me!" }
        ]
    } );
      
    $( tableTools.fnContainer() ).insertAfter('div.info');
        });
    </script>

    @if (TempData["Message"] != null)
{
   <div class="alert alert-@TempData["MsgType"]">
      @TempData["Message"]
   </div>
}


    <header class="text-center text-black">
        <h1 class="display-2"><b>All Enquiries</b></h1>
    </header>
    <div class="row py-3">
        <div class="col-sm-12 mx-auto">
             <div class="card rounded shadow border-0">
                 <div class="card-body p-sm-10 bg-white rounded">
                    <div class="table-responsive">
                        <table id="Etable"class="table table-hover table-responsive" style="text-align:center; font-size:13px">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Visitor Email</th>
                                    <th>Subject</th>
                                    <th>Enquiry</th>
                                    <th>Date Submitted</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Enquiry item in Model)
                                {
                                    <tr>
                                        <td>@item.EnquiryId</td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Question</td>
                                        <td>@item.EnquiryDate.ToShortDateString()</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a asp-controller="Enquiry" 
                                            asp-action="EnquiryReply" 
                                            asp-route-id="@item.EnquiryId"><i class="bi bi-envelope-plus" data-bs-toggle="tooltip" data-bs-placement="top" title="Reply To Enquiry"></i> </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                       </div>
                    </div>
                </div>
            </div>

