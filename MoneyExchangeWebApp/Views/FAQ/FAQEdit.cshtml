@using MoneyExchangeWebApp.Models
@model FAQ


<form method="post"
      asp-controller="FAQ"
      asp-action="FAQEdit"
      enctype="multipart/form-data">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit FAQ</h2>
        </div>
        <hr />

        <<div class="form-floating mb-3">
            <input type="text" class="form-control" placeholder="Question" asp-for="Question">
            <label asp-for="Question">Question</label>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" placeholder="Answer" asp-for="Answer">
            <label asp-for="Answer">Answer</label>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="d-grid col-12 ms-auto mb-3">
                <input type="submit" value="Create FAQ" class="btn-lg btn-outline-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class=" col-6 ml-auto mb-3">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            </div>
        }
    </div>
</form>