@model MoneyExchangeWebApp.Models.Stock

<form method="post" 
      asp-controller="Stock"
      asp-action="StockEdit" 
      >

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-5" >
         <h2>Update Stock</h2>
      </div>
   </div>

   <input type="text" asp-for="Stock_id" hidden />
   <input type="text" asp-for="Stock_name" hidden />
   <input type="text" asp-for="Average_rate" hidden />

   <div class="form-group row">
      <label class="control-label col-sm-2" for="Stock_amount">Amount: </label>
      <div class="col-sm-5">
         <input type="text" asp-for="Stock_amount" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Stock_amount" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-5">
         <input type="submit" value="Edit" class="btn btn-primary" /><br />
      </div>
   </div>

   @if (ViewData["Message"] != null)
    {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-5">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
