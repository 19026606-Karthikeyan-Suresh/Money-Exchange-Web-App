@model Stock

<div class="modal fade" id="AddCurrencyModal" tabindex="-1" aria-labelledby="AddCurrencyLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="AddCurrencyLabel">Add a Currency!</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form method="post" asp-controller="Wallet" asp-action="AddaCurrency">

          <div class="form-floating mb-3">
              <select class="form-select" asp-items="@(ViewData["Currencylist"]) as IEnumerable<SelectListItem>" asp-for="ISO">
                <option disabled selected>--- Select A currency ---</option>
              </select>
              <label asp-for="ISO">ISO</label>
              <span asp-validation-for="ISO" class="text-danger"></span>
          </div>
          
          <div class="form-floating mb-3">
              <input type="text" class="form-control" placeholder="Amount" asp-for="Amount">
               <label asp-for="Amount">Amount</label>
               <span asp-validation-for="Amount" class="text-danger"></span>
          </div>

          <div class="modal-footer">
              <div class="btn-group col-sm-12">
                  <button type="button" class="btn btn-outline-secondary mx-2" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary mx-2">Add Currency</button>
              </div>
          </div>
          </form>
      </div>
    </div>
  </div>
</div>