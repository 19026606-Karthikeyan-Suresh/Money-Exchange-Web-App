@model Stock

<form method="post" asp-controller="Stock" asp-action="DepositIntoWallet">

    <input asp-for="StockId" hidden readonly />

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="ISO" readonly>
        <label asp-for="ISO">ISO</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Amount" readonly>
        <label asp-for="Amount">Current Balance</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" placeholder="Deposit Amount" name="deposit" id="deposit">
        <label for="deposit">Deposit</label>
    </div>

    @*          <div class="modal-footer">*@
    <div class="btn-group col-sm-12">
        <a type="button" asp-controller="Stock" asp-action="ShowWallet" class="btn btn-outline-secondary mx-2">Go back to Index</a>
        <button type="submit" class="btn btn-primary mx-2">Deposit</button>
    </div>
    @*          </div>*@
    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }
</form>
