@model MoneyExchangeWebApp.Models.Enquiry

<h4>Reply To Enquiry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReplyToEnquiry">

            <input type="text" asp-for="Enquiry_id" hidden />

            <div class="form-group">
                <label asp-for="Visitor_email_address" class="control-label"></label>
                <input asp-for="Visitor_email_address" class="form-control disabled" />
                <span asp-validation-for="Visitor_email_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enquiry_date" class="control-label"></label>
                <input asp-for="Enquiry_date" class="form-control" />
                <span asp-validation-for="Enquiry_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answered_by" class="control-label"></label>
                <input asp-for="Answered_by" class="form-control" />
                <span asp-validation-for="Answered_by" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deleted" class="control-label"></label>
                <input asp-for="Deleted" class="form-control" />
                <span asp-validation-for="Deleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deleted_by" class="control-label"></label>
                <input asp-for="Deleted_by" class="form-control" />
                <span asp-validation-for="Deleted_by" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
