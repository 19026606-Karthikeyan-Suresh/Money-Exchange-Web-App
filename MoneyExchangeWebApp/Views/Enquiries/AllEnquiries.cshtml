@using MoneyExchangeWebApp.Models;
@model List<Enquiry>

    @if (TempData["Message"] != null)
{
   <div class="alert alert-@TempData["MsgType"]">
      @TempData["Message"]
   </div>
}


    <header class="text-center text-black">
        <h1 class="display-2"><b>All Enquiries</b></h1>
    </header>
    <div class="row py-5">
        <div class="col-sm-11 mx-auto">
                    <div class="table-responsive">
                        <table class="table table-hover table-responsive" style="text-align:left">
                            <thead>
                                <tr>
                                    <th>Guest Email</th>
                                    <th>Enquiry</th>
                                    <th>Date Submitted</th>
                                    <th>Status</th>
                                    <th>Answered By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Enquiry item in Model)
                                {
                                    <tr>
                                        <td>@item.Visitor_email_address</td>
                                        <td>@item.Description</td>
                                        <td>@item.Enquiry_date.ToShortDateString()</td>
                                        <td>@item.Status</td>
                                        <td>@item.Answered_by</td>
                                        <td>
                                            <a asp-controller="Enquiries" 
                                            asp-action="ReplyToEnquiry" 
                                            asp-route-id="@item.Enquiry_id"><i class="bi bi-envelope-plus"></i> </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
