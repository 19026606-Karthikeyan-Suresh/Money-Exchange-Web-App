@using MoneyExchangeWebApp.Models;
<section class="FAQ-slider" id="scrollspyFAQs">
    @{
        List<FAQ> FAQlist = DBUtl.GetList<FAQ>(@"SELECT * FROM FAQ");
        ViewData["FAQ"] = new List<FAQ>(FAQlist);
    }
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6">
                <div class="FAQ-text-widget">
                    <h2 class="display-4">Commonly asked FAQs</h2>
                    <p class="text-muted">These are our most commonly asked FAQs</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="FAQ-slider-holder">
                    <ul id="FAQ_slider_content">
                        @{
                            foreach (var item in ViewData["FAQ"] as List<FAQ>)
                            {
                                <li>
                                    <div class="card">
                                        <div class="card-body">
                                            <i class="fas fa-question-circle fa-4x"></i>
                                            <h6 class="card-title" style="padding-top: 10px;">@item.Question</h6>
                                            <p class="card-text text-muted">
                                                @item.Answer
                                            </p>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section MoreScripts {
    <script src="~/js/LoadSlider.js"></script>
}