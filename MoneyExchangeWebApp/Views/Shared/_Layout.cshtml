<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>KachingExpress</title>

    <!-- Bootsrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <!-- Bootsrap CSS & Icons -->
    
    <!-- Fontawesome Icons -->
    <script src="https://kit.fontawesome.com/9347201634.js" crossorigin="anonymous"></script>
    <!-- Fontawesome Icons -->

    <!-- HomePage CSS -->
    <link rel="stylesheet" href="~/css/style.css"/>
    <!-- HomePage CSS -->

    <!-- Datatables CSS -->
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" />
    <!-- Datatables CSS -->

    <!-- Slider CSS (carousel) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/css/lightslider.min.css">
    <!-- Slider CSS (carousel) -->

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("MoreScripts", false)

</head>
<body data-bs-spy="scroll" data-bs-target="#nav1" data-bs-offset="0" class="scrollspy-example" tabindex="0">

    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
   {
        <partial name="_Admin" />
   }
   else if(User.Identity.IsAuthenticated && User.IsInRole("staff"))
   {
        <partial name="_Staff" />
    }
    else
    {
             <!-- Guest Nav -->
    <partial name="_GuestNav" />
    <!-- Guest Nav -->
    }

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- JQuery -->

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Bootstrap Bundle JS -->
    
    <!-- Datatables JS -->
    <script src="//cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <!-- Datatables JS -->

    <!-- Slider JS (carousel) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightslider/1.1.6/js/lightslider.min.js"></script>
    <!-- Slider JS (carousel) -->

    <!-- SweetAlerts JS -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- SweetAlerts JS -->

    <!-- tinyMCE JS (text editor) -->
    <script src="https://cdn.tiny.cloud/1/4j2rczt398rtvn1rrrso7ya9evd9g9pl45rppj66zzrpo97o/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <!-- tinyMCE JS (text editor) -->

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
