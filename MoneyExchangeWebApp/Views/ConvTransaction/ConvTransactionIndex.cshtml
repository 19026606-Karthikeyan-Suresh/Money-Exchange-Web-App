@section MoreScripts {
    <link type="text/css" href="~/Datatables/datatables.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Datatables/datatables.min.js"></script>
}


@using MoneyExchangeWebApp.Models;
@model List<ConvTransaction>;

    <script>
        $(document).ready(function () {
            $('#CTRtable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                pageLength: 10
            });
        });
    </script>

    <div class="container py-sm-5">
        <div class="row pt-4 justify-content-center" >
            <div class=" col-6 ">
                <h2 class="text-dark">All Currency Trades</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-action="CreateConvTransaction" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create a Currency Trade!
                </a>
            </div>
    </div>
    <br/><br/>

        <div class="row py-2">
            <div class="col-sm-12 mx-auto">
                <div class="card rounded shadow border-0">
                    <div class="card-body p-sm-10 bg-white rounded">
                        <div class="table-responsive">
                            <table id="CTRtable"  class="table table-hover table-responsive" style="text-align:center; font-size:13px; ">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Base</th>
                                        <th>Base Amount</th>
                                        <th>Quote</th>
                                        <th>Quote Amount</th>
                                        <th>Exchange Rate</th>
                                        <th>Created by</th>
                                        <th>Transaction Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ConvTransaction item in Model)
                                    {
                                        <tr>
                                            <td>@item.TransactionId</td>
                                            <td>@item.BaseCurrency</td>
                                            <td>@item.BaseAmount</td>
                                            <td>@item.QuoteCurrency</td>
                                            <td>@item.QuoteAmount</td>
                                            <td>@item.ExchangeRate</td>
                                            <td>@item.DoneBy</td>
                                            <td>@String.Format("{0:yyyy-MM-dd}", item.TransactionDate)</td>
                                            <td>
                                                <a asp-controller="ConvTransaction" 
                                                    asp-action="ConvTransactionEdit" 
                                                    asp-route-id="@item.TransactionId"><i class="fas fa-edit" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Transaction"></i></a>
                                                |
                                                <a href="/ConvTransaction/SoftDeleteConvTransaction"><i class="fas fa-trash-alt" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Transaction"></i></a>
                                                |
                                                <a href="/ConvTransaction/ConvTransactionDetails"><i class="fas fa-eye" data-bs-toggle="tooltip" data-bs-placement="top" title="View Transaction Details"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
