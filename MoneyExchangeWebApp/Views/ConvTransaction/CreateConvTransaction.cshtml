@model MoneyExchangeWebApp.Models.ConvTransaction;

<form method="post"
      asp-controller="ConvTransaction"
      asp-action ="CreateConvTransaction">

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <h2>Create a Transaction</h2>
      </div>
   </div>

   <div class ="form-floating mb-3 row-cols-2">
       <input type="text" class="form-control" id="SourceInput" placeholder="SGD" asp-for="BaseCurrency">
       <label for="SourceInput">Base: </label>
       <span asp-validation-for="BaseCurrency" class="text-danger"></span>
   </div>

   <div class="form-floating mb-3 row-cols-5">
       <input type="text" class="form-control" id="SourceAmount" placeholder="SGD" asp-for="BaseAmount">
       <label for="SourceInput">Source Amount</label>
       <span asp-validation-for="BaseAmount" class="text-danger"></span>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="QuoteCurrency">Quote : </label>
      <div class="col-sm-6">
         <input type="text" asp-for="QuoteCurrency" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="ExchangeRate">Exchange Rate: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="ExchangeRate" class="form-control" />
      </div>
   </div>

      <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="QuoteAmount">Converted Value: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="QuoteAmount" class="form-control" />
      </div>
   </div>

  <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="TransactionDate">Transaction Date: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="TransactionDate" class="form-control" placeholder="YYYY-MM-DD" />
      </div>
   </div>

   <input asp-for="DoneBy" value=@User.Identity.Name hidden/>

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <input type="submit" value="Create" class="btn btn-primary" />
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <div asp-validation-summary="All" class="text-danger"></div>
      </div>
   </div>
</form>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
