@model Currency

<form method="post"
      asp-controller="Currency"
      asp-action ="CurrencyCreate"
      enctype="multipart/form-data">

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <h2>Add a Currency</h2>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Currency_name">Currency Name: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Currency_name" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Country">Country: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Country" class="form-control" />
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Average_rate">Average Rate: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Average_rate" class="form-control" />
      </div>
   </div>

  <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Created_date">Created Date: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Created_date" class="form-control" placeholder="YYYY-MM-DD" />
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <input type="submit" value="Create" class="btn btn-primary" />
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-6">
         <div asp-validation-summary="All" class="text-danger"></div>
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
