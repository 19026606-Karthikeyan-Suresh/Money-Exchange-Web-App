@using MoneyExchangeWebApp.Models;
@model DataTable;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Top 5 Currencies</h2>
        </div>

        <form method="post" asp-controller="Currency" asp-action="Top5Currencies">

            <div class="col-sm-6">
        <select class="form-control row mb-3" name="BestOrWorst" id="BestOrWorst">
                <option value="">-- Select One</option>
                <option value="Best">Top 5</option>
                <option value="Worst">Worst 5</option>
        </select>
        <select class="form-control row mb-3" name="Month" id="Month">
                <option value="">--Month--</option>
                <option value=1>January</option>
                <option value=2>February</option>
                 <option value=3>March</option>
                <option value=4>April</option>
                 <option value=5>May</option>
                <option value="6">June</option>
                 <option value="7">July</option>
                <option value="8">August</option>
                 <option value="9">September</option>
                <option value="10">October</option>
                 <option value="11">November</option>
                <option value="12">December</option>
        </select>
        <div class="col-sm-6">
           <input type="submit" id="btn" value="Submit" class="form-control row" 
            asp-controller="Currency" asp-action="DisplayResults"/>
      </div>
      </div>
      
        </form>
    </div>
</div>
