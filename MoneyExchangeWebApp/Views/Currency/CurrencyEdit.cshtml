@model MoneyExchangeWebApp.Models.Currency

<form method="post" 
      asp-controller="Currency"
      asp-action="CurrencyEdit" 
      >

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-5" >
         <h2>Update Currency</h2>
      </div>
   </div>

   <input type="text" asp-for="Currency_id" hidden />

   <div class="form-group row">
      <label class="control-label col-sm-2" for="Currency_name">Currency Name: </label>
      <div class="col-sm-5">
         <input type="text" asp-for="Currency_name" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Currency_name" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" for="Country">Country :</label>
      <div class="col-sm-5">
         <input type="text" asp-for="Country" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Country" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label col-sm-2" for="Average_rate">Average Rate :</label>
      <div class="col-sm-5">
         <input type="text" asp-for="Average_rate" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Average_rate" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-2 col-sm-5">
         <input type="submit" value="Edit" class="btn btn-primary" /><br />
      </div>
   </div>

   @if (ViewData["Message"] != null)
    {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-5">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
