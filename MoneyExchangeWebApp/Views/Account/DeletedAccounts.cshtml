@using MoneyExchangeWebApp.Models;
@model List<Account>

    @if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div class="container py-sm-5">
    <header class="text-center text-black">
        <h1 class="display-2"><b>Deleted Accounts</b></h1>
    </header>
    <div class="row py-4">
        <div class="col-sm-10 mx-auto">
            <div class="card rounded shadow border-0">
                <div class="card-body p-sm-5 bg-white rounded">
                    <div class="table-responsive">
                        <table class="table table-hover table-responsive" style="text-align:center">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Phone No.</th>
                                    <th>Gender</th>
                                    <th>DOB</th>
                                    <th>Role</th>
                                    <th>Date Created</th>
                                    <th>Deleted By</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Account item in Model)
                                {
                                    <tr>
                                        <td>@item.AccountId</td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Gender</td>
                                        <td>@item.DOB.ToShortDateString()</td>
                                        <td>@item.Role</td>
                                        <td>@item.DateCreated.ToShortDateString()</td>
                                        <td>@item.DeletedBy</td>
                                        <td>
                                            <a asp-controller="Account"
                                           asp-action="RecoverAccount"
                                           asp-route-id="@item.AccountId"
                                           onclick="return confirm('Recover Account [@item.EmailAddress]')"> <i class="fas fa-user-plus"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
