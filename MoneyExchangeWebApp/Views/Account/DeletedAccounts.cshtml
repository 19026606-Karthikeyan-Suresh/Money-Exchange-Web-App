@using MoneyExchangeWebApp.Models;
@model List<Account>

    @if (TempData["Message"] != null)
{
   <div class="alert alert-@TempData["MsgType"]">
      @TempData["Message"]
   </div>
}

    <div class="container py-sm-5">
            <header class="text-center text-black">
                <h1 class="display-2"><b>Deleted Accounts</b></h1>
            </header>
            <div class="row py-4">
                <div class="col-sm-10 mx-auto">
                    <div class="card rounded shadow border-0">
                        <div class="card-body p-sm-5 bg-white rounded">
                            <div class="table-responsive">
                                <table class="table table-hover table-responsive" style="text-align:center">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Username</th>
                                            <th>Password</th>
                                            <th>Name</th>
                                            <th>Role</th>
                                            <th>Date Created</th>
                                            <th>Deleted By</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (Account item in Model)
                                        {
                                            <tr>
                                                <td>@item.Account_id</td>
                                                <td>@item.Username</td>
                                                <td>@item.Password</td>
                                                <td>@item.Name</td>
                                                <td>@item.Role</td>
                                                <td>@item.Date_created.ToShortDateString()</td>
                                                <td>@item.Deleted_by</td>
                                                <td>
                                                    <a asp-controller="Account" 
                                                    asp-action="RecoverAccount"
                                                    asp-route-id="@item.Account_id"
                                                    onclick="return confirm('Recover Account [@item.Name]')"> <i class="fas fa-user-plus"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
