@model UserLogin

<form asp-controller="Account"
      asp-action="Login"
      method="post"
      >
   <h2>Please Sign In</h2>

   <div class="col-sm-4">

       <div class="form-floating mb-3">
           <input type="text" class="form-control" id="UsernameInput" placeholder="john123@moneyexchanger.com" asp-for="UserID">
           <label for="UsernameInput">Username</label>
           <span asp-validation-for="UserID" class="text-danger"></span>
       </div>
           <div class="form-floating mb-3">
           <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Password">
           <label for="floatingPassword">Password</label>
           <span asp-validation-for="Password" class="text-danger"></span>
       </div>
            <div class="form-group row">
            <span class="text-danger">@TempData["Message"]</span>
      </div>

      <div class="form-group row">
         <input type="submit" class="btn btn-primary" value="Login" />
      </div>

   </div>
</form>

