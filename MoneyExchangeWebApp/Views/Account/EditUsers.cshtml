@model Account

<form method="post"
      asp-controller="Account"
      asp-action="EditUsers">

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <h2>Edit users</h2>
      </div>
   </div>

   <input type="text" asp-for="Account_id" hidden />

    <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Username">Username :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Username" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Username" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Password">Password :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Password" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Password" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Name">Name: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Name" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Name" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Role">Role: </label>
      <div class="col-sm-6">
        <select id="role" name="Role">
                <option value="">-- Select One</option>
                <option value="Staff">Staff</option>
                <option value="Admin">Admin</option>
            </select>
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Role" class="text-danger"></span>
      </div>
   </div>

      <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Date_created">Date Created: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Date_created" class="form-control" placeholder="YYYY-MM-DD" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Date_created" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <input type="submit" value="Edit" class="btn btn-primary" />
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
