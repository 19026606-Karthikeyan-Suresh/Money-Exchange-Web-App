@model Account

<form method="post"
      asp-controller="Account"
      asp-action="EditUsers">

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <h2>Edit users</h2>
      </div>
   </div>

   <input type="text" asp-for="AccountId" hidden />

    <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="EmailAddress">Email Address :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="EmailAddress" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="EmailAddress" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Password">Password :</label>
      <div class="col-sm-6">
         <input type="text" asp-for="Password" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Password" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="FirstName">First Name: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="FirstName" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="FirstName" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="LastName">Last Name: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="LastName" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="LastName" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Address">Address: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Address" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Address" class="text-danger"></span>
      </div>
   </div>

    <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="PhoneNumber">Phone Number: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="PhoneNumber" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="PhoneNumber" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="Gender">Gender: </label>
      <div class="col-sm-6">
         <input type="text" asp-for="Gender" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="Gender" class="text-danger"></span>
      </div>
   </div>

   <div class="form-group row">
      <label class="control-label offset-sm-1 col-sm-2" asp-for="DOB">Date of Birth: </label>
      <div class="col-sm-6">
         <input type="date" asp-for="DOB" class="form-control" />
      </div>
      <div class="col-sm-4">
         <span asp-validation-for="DOB" class="text-danger"></span>
      </div>
   </div>

   <input asp-for=Role hidden />
   <input asp-for=DateCreated />
   <input asp-for=Deleted hidden />
   <input asp-for=DeletedBy hidden />
   <input asp-for=DateDeleted hidden />

   <div class="form-group row">
      <div class="offset-sm-3 col-sm-6">
         <input type="submit" value="Edit" class="btn btn-primary" />
      </div>
   </div>

   @if (ViewData["Message"] != null)
   {
      <div class="form-group row">
         <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
               <text>@ViewData["Message"]</text>
            </div>
         </div>
      </div>
   }
</form>
