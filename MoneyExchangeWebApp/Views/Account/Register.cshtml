@using MoneyExchangeWebApp.Models
@model Account


<form method="post"
      asp-controller="Account"
      asp-action="RegisterPost"
      enctype="multipart/form-data">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Register a User</h2>
        </div>
        <hr />

        <div class="form-floating mb-3">
            <input type="email" class="form-control" place-holder="Email Address" asp-for="EmailAddress">
            <label asp-for="EmailAddress">Email</label>
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class=" row g-2 mb-3">
            <div class="col-md">
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
                    <label asp-for="FirstName">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
                    <label asp-for="LastName">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" placeholder="Address" asp-for="Address">
            <label asp-for="Address">Address</label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber">
            <label asp-for="PhoneNumber">Phone Number</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <select class="form-select" asp-for="Gender">
                <option selected disabled>----</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Unspecified">Unspecified</option>
            </select>
            <label asp-for="Gender">Gender</label>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="date" class="form-control" asp-for="DOB">
            <label asp-for="DOB">Date Of Birth</label>
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>

        @*<div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Role" disabled>
            <label asp-for="Role">Role</label>
            <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
            <input type="date" class="form-control" asp-for="DateCreated" disabled>
            <label asp-for="DateCreated">Date Created</label>
            <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="EditedBy" disabled>
            <label asp-for="EditedBy">Edited By</label>
            <span asp-validation-for="EditedBy" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
            <input type="date" class="form-control" asp-for="DateEdited" disabled>
            <label asp-for="DateEdited">Date Edited</label>
            <span asp-validation-for="DateEdited" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="DeletedBy" disabled>
            <label asp-for="DeletedBy">Deleted By</label>
            <span asp-validation-for="DeletedBy" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
            <input type="date" class="form-control" asp-for="DateDeleted" disabled>
            <label asp-for="DateDeleted">Date Deleted</label>
            <span asp-validation-for="DateDeleted" class="text-danger"></span>
            </div>*@

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>

        <div class="form-group row">
            <div class="d-grid col-12 ms-auto mb-3">
                <input type="submit" value="Add User" class="btn-lg btn-outline-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class=" col-6 ml-auto mb-3">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            </div>
        }
    </div>
</form>

